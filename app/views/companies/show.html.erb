<h1><%= @company.name %></h1>

<h2><%= @company.mission %></h2>
<p><%= @company.description %></p>
<%= image_tag(@company.logo.full) if @company.logo?%>
<h2>Jobs:</h2>
<% if (@company.jobs.count == 0) %>
<p>No openings at <%= @company.name %></p>
<% else %>
	<% @company.jobs.each do |j| %> 
		<h2><%= j.title %></h2>
		<p><%= j.description %></p>
		<p><%= j.salary %></p>
		<p><%= j.requirements %></p>
		<p><%= j.link %></p>
		<p>Categories: <% j.categories.each do |c| %>
			<%= link_to "#{c.name}", category_path(c) %>
			<% end %> </p>
		<%= link_to "Edit job", edit_company_job_path(@company, j) %>
		<hr>
	<% end %>
<% end %>
<% if user_signed_in? && current_user.role == "admin" %>
<%= link_to 'Back to listings', companies_path %>
<h4>Admin panel:</h4>
<%= link_to 'Edit Company', edit_company_path(@company) %> |
<%= link_to "Add a job", new_company_job_path(@company) %>
<% end %>


