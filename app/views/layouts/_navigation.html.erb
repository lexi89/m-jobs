<div class="nav navbar-default white navbar-fixed-top">
	<div class="container-fluid">
		<a href="/" class="navbar-brand">Missions</a>
		<ul class = "nav navbar-nav">
			<!-- Logged in -->
			<% if user_signed_in? %>
				<li class = "profile-pic"><%= link_to image_tag(current_user.image.nav), user_path(current_user)%></li>
				<li><%= link_to "Logged in as #{current_user.email}", user_path(current_user)%></li>
				<li><%= link_to "Log out", destroy_user_session_path, method: :delete%></li>
			<% else %>

			<!-- Logged out -->
				<li><%= link_to "Log in", new_user_session_path %></li>
				<li><%= link_to "Sign up", new_user_registration_path %></li>
				<li><%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %></li>
			<%end%>

			<!-- Admin options  -->
			<% if user_signed_in? && current_user.role == "admin" %>
			    <li><%= link_to 'Add a new Company', new_company_path %></li>
			<% end %>

		</ul>

	</div>
</div>
